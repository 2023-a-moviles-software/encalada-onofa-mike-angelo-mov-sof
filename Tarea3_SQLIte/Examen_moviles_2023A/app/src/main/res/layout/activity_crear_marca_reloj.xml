<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearMarcaReloj">

    <Button
        android:id="@+id/btn_crearaceptar_mr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:text="Crear"
        app:layout_constraintEnd_toEndOf="@+id/txt_crear_rating_mr"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/txt_crear_rating_mr"
        app:layout_constraintTop_toBottomOf="@+id/txt_crear_rating_mr" />

    <EditText
        android:id="@+id/txr_crear_nombre_MR"
        android:layout_width="291dp"
        android:layout_height="49dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/txt_crear_pais_mr"
        app:layout_constraintEnd_toEndOf="@+id/txt_crear_pais_mr"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="@+id/txt_crear_pais_mr" />

    <EditText
        android:id="@+id/txt_crear_pais_mr"
        android:layout_width="292dp"
        android:layout_height="54dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="Pais Origen"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/txt_crear_date_mr"
        app:layout_constraintEnd_toEndOf="@+id/txt_crear_date_mr"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_crear_date_mr" />

    <EditText
        android:id="@+id/txt_crear_date_mr"
        android:layout_width="291dp"
        android:layout_height="56dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:hint="Fecha Fundacion"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/txt_crear_rating_mr"
        app:layout_constraintEnd_toEndOf="@+id/txt_crear_rating_mr"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/txt_crear_rating_mr" />

    <EditText
        android:id="@+id/txt_crear_rating_mr"
        android:layout_width="287dp"
        android:layout_height="57dp"
        android:ems="10"
        android:hint="Rating"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>