<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarseActivity">

    <EditText
        android:id="@+id/pt_ra_correo"
        android:layout_width="322dp"
        android:layout_height="52dp"
        android:layout_marginBottom="64dp"
        android:ems="10"
        android:hint="Correo Electr칩nico"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/p_ra_passwd"
        app:layout_constraintEnd_toEndOf="@+id/p_ra_passwd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/p_ra_passwd" />

    <EditText
        android:id="@+id/pt_ra_username"
        android:layout_width="322dp"
        android:layout_height="52dp"
        android:layout_marginBottom="64dp"
        android:ems="10"
        android:hint="Nombre de usuario"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/pt_ra_correo"
        app:layout_constraintEnd_toEndOf="@+id/pt_ra_correo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pt_ra_correo" />

    <TextView
        android:id="@+id/tv_ra_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Correo electr칩nico:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/pt_ra_correo"
        app:layout_constraintEnd_toEndOf="@+id/pt_ra_correo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pt_ra_correo" />

    <TextView
        android:id="@+id/tv_ra_passw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Contrase침a:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/p_ra_passwd"
        app:layout_constraintEnd_toEndOf="@+id/p_ra_passwd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/p_ra_passwd" />

    <TextView
        android:id="@+id/tv_ra_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Nombre de usuario:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/pt_ra_username"
        app:layout_constraintEnd_toEndOf="@+id/pt_ra_username"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pt_ra_username" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Registrarse"
        app:titleMarginStart="20dp"
        app:titleTextColor="@color/white" />

    <EditText
        android:id="@+id/p_ra_passwd"
        android:layout_width="322dp"
        android:layout_height="54dp"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:hint="Contrase침a"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/btn_ra_registrarse"
        app:layout_constraintEnd_toEndOf="@+id/btn_ra_registrarse"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/btn_ra_registrarse" />

    <Button
        android:id="@+id/btn_ra_registrarse"
        android:layout_width="173dp"
        android:layout_height="55dp"
        android:text="Registrarse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.772" />

</androidx.constraintlayout.widget.ConstraintLayout>